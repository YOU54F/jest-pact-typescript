{
  "name": "pact-consumer-example-typescript",
  "version": "1.0.0",
  "description": "",
  "devDependencies": {
    "@pact-foundation/pact": "8.2.2",
    "@types/chai": "4.1.7",
    "@types/dotenv": "6.1.1",
    "@types/jest": "24.0.12",
    "@types/supertest": "2.0.7",
    "chai": "4.2.0",
    "cross-env": "5.2.0",
    "dotenv": "7.0.0",
    "husky": "2.1.0",
    "jest": "24.7.1",
    "jest-junit": "6.3.0",
    "jest-pact": "0.0.9",
    "lint-staged": "8.1.5",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "swagger-cli": "2.2.1",
    "swagger-mock-validator": "6.0.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-no-focused-test": "0.5.0",
    "typescript": "3.4.5"
  },
  "scripts": {
    "build": "tsc",
    "build-test-publish": "yarn run build && yarn run pact-test && yarn run pact-publish && yarn run pact-tag",
    "swagger-validate-spec": "swagger-cli validate ./docs/pet-store.json",
    "swagger-validate-pact": "swagger-mock-validator ./docs/pet-store.json ./pact/pacts/test-consumer-json-provider.json",
    "pact-test": "jest --detectOpenHandles \"^.+pacttest\\.ts$\"",
    "pact-publish": "./src/pact/publisher/publish.sh",
    "delete-pacts-local": "rm ./pact/pacts/*.json",
    "pact-verify": "ts-node src/pact/verifier/verify.ts",
    "lint": "tslint --project . --fix"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Yousaf Nabi",
  "license": "MIT"
}
